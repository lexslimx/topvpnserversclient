<Window x:Class="SurfVpnClientTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SurfVpnClientTest1.ViewModels"
        mc:Ignorable="d"
        Title="Top Vpn Servers" MaxHeight="500" MaxWidth="350" MinHeight="500" MinWidth="350" Background="#FFA2CDE8">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid Background="#F0F0F0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#007ACC" CornerRadius="10" Margin="0,0,0,10">
            <Label Content="Top Vpn Servers" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               FontSize="25" 
               Foreground="White" 
               FontWeight="Bold" />
        </Border>

        <!-- Welcome Text -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Margin="0,5,0,5">
                Subscription:
            </Label>
            <TextBox Grid.Column="1" Visibility="Hidden" x:Name="SubscriptionText" Text="FREE" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="16" IsReadOnly="True" Margin="0,5,0,5"/>
        </Grid>

        <!-- Profile Button -->        
        <Button Grid.Row="1" Grid.Column="2" Content="Save"         
         
            Foreground="#007ACC" 
            BorderBrush="Transparent" 
            FontWeight="Bold" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Right"/>

        <!-- Server Selection -->
        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Margin="0,5,0,5">
            select a server:
        </Label>
        <ComboBox Grid.Row="3" Grid.ColumnSpan="1" Name="ServersDropDown"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Stretch"
                  FontSize="16"
                  Margin="0,5,0,5"
                  ItemsSource="{Binding ConnectionProfiles, Mode=OneWay}"
                  SelectedItem="{Binding SelectedConnectionProfile, Mode=TwoWay}"
                  DisplayMemberPath="Name">
        </ComboBox>

        <Button Grid.Row="3" Grid.Column="1" Content="Add"                                        
            FontWeight="Bold"             
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Command="{Binding ImportProfileCommand}"
                />

        <Button Grid.Row="3" Grid.Column="2" Content="Del"                                        
            FontWeight="Bold"             
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Command="{Binding DeleteProfileCommand}"
                />

        <!-- Connect Button -->
        <Button Grid.Row="4" Grid.ColumnSpan="3" Content="{Binding ConnectButtonText, Mode=OneWay}" 
            FontSize="16"            
            Background="#007ACC"
            Foreground="White" 
            BorderBrush="Transparent" 
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch"
            Command="{Binding ConnectCommand}">
        </Button>


        <!-- Statistics Panel -->
        <Border Grid.Row="5" Grid.ColumnSpan="3"  BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Statistics" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Connection Status:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="ConnectionStatus" Text="{Binding ConnectionStatus,Mode=OneWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Subscription Expiry:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="AccountEndDate" Text="12/12/2025 00:00:00"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Activity" FontWeight="SemiBold" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Stretch" Height="103">
                    <TextBlock x:Name="LogsTextBlock" Text="{Binding LogsTextBlock,Mode=OneWay}" TextWrapping="Wrap"  HorizontalAlignment="Stretch"/>
                </StackPanel>
            </StackPanel>
        </Border>


    </Grid>
</Window>


    