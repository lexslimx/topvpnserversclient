<Window x:Class="SurfVpnClientTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SurfVpnClientTest1.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="500" MaxWidth="350" MinHeight="500" MinWidth="350" Background="#FFA2CDE8">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid Background="#F0F0F0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"></ColumnDefinition>
            <ColumnDefinition Width="20*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#007ACC" CornerRadius="10" Margin="0,0,0,10">
            <Label Content="Top Vpn Servers" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               FontSize="25" 
               Foreground="White" 
               FontWeight="Bold" />
        </Border>

        <!-- Welcome Text -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Margin="0,5,0,5">
                Subscription:
            </Label>
            <TextBox Grid.Column="1" x:Name="SubscriptionText" Text="{Binding SubscriptionText,Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="16" Margin="0,5,0,5"/>
        </Grid>

        <!-- Profile Button -->        
        <Button Grid.Row="1" Grid.Column="1" Content="Save"         
         
            Foreground="#007ACC" 
            BorderBrush="Transparent" 
            FontWeight="Bold" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Right"/>

        <!-- Server Selection -->
        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Margin="0,5,0,5">
            select a server:
        </Label>
        <ComboBox Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="16" Margin="0,5,0,5">
            <ComboBoxItem Content="East US"></ComboBoxItem>
            <ComboBoxItem Content="West Europe"></ComboBoxItem>
            <ComboBoxItem Content="Japan East"></ComboBoxItem>
        </ComboBox>

        <!-- Connect Button -->
        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Connect" 
            FontSize="16"             
            Background="#007ACC" 
            Foreground="White" 
            BorderBrush="Transparent" 
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch"
            Command="{Binding ConnectCommand}">
        </Button>


        <!-- Statistics Panel -->
        <Border Grid.Row="5" Grid.ColumnSpan="2"  BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Statistics" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Connected Server:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="ConnectedServerText" Text="N/A"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Data Usage:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="DataUsageText" Text="0 MB"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Connection Time:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="ConnectionTimeText" Text="00:00:00"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Connection Status:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="ConnectionStatus" Text="{Binding ConnectionStatus,Mode=OneWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Subscription Expiry:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock x:Name="AccountEndDate" Text="12/12/2025 00:00:00"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Logs" FontWeight="SemiBold" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock x:Name="LogsTextBlock" Text="{Binding LogsTextBlock,Mode=OneWay}" TextWrapping="NoWrap"/>
                </StackPanel>
            </StackPanel>
        </Border>


    </Grid>
</Window>


    